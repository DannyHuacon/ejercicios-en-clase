/******************************************************************************

Realizar un programa en C que determine el area de un circulo
*******************************************************************************/
#include <stdio.h>
#include <math.h>
#define pi 3.1416

void main()
{
    float radio,area=0;
    printf("ingrese el radio");
    scanf("%f",&radio);
    //area=pi*radio*radio;
    area=pi*pow(radio,2);
    printf("el area es %.2f",area);
    
    
}
